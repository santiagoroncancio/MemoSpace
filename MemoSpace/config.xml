<?xml version='1.0' encoding='utf-8'?>
<widget id="com.MemoSpace" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MemoSpace</name>
    <description>
        MemoSpace is a memory game that helps the brain practice short-term memory. 
    </description>
    <author email="" href="https://github.com/S4ntrg/MemoSpace">
        Johan Leon - programmer - johanleon14
        Santiago Roncancio - programmer - ss2108
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <icon src="www/img/icon.png" platform="android" width="57" height="57" density="mdpi" />

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
